<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="userMapping">
    <resultMap type="me.sevenstack.web.model.User" id="only-user">
        <id     property="id"         column="id"/>
        <result property="userName"   column="user_name"/>
        <result property="password"   column="password"/>
        <result property="email"      column="email"/>
        <result property="address"    column="address"/>
        <result property="mobile"     column="mobile"/>
        <result property="telephone"  column="telephone"/>
        <result property="sns"        column="sns"/>
    </resultMap>
    <resultMap type="me.sevenstack.web.model.User" id="user-result">
        <id     property="id"         column="id"/>
        <result property="userName"   column="user_name"/>
        <result property="password"   column="password"/>
        <result property="email"      column="email"/>
        <result property="address"    column="address"/>
        <result property="mobile"     column="mobile"/>
        <result property="telephone"  column="telephone"/>
        <result property="sns"        column="sns"/>
        <collection property="postList" javaType="post" column="author_id" select="postMapping.findPostList"/>
    </resultMap>
    
    <select id="findUserById" resultMap="user-result" parameterType="_int">
        select * 
          from users 
         where id = #{value}
    </select>
    <select id="findOneUser" resultMap="user-result" parameterType="user">
        select *
          from users 
         where 1=1
        <if test="id != null">
            and id = #{id}
        </if>
        <if test="@org.apache.commons.lang3.StringUtils@isNotBlank(userName)">
            and user_name = #{userName}
        </if>
        <if test="@org.apache.commons.lang3.StringUtils@isNotBlank(email)">
            and email = #{email}
        </if>
        <if test="@org.apache.commons.lang3.StringUtils@isNotBlank(password)">
            and password = #{password}
        </if>
        limit 1
    </select>
    <select id="findUserList" resultMap="user-result" parameterType="user">
        select *
          from users 
         where 1=1
        <if test="id != null">
           and id = #{id}
        </if>
        <if test="@org.apache.commons.lang3.StringUtils@isNotBlank(userName)">
           and user_name = #{userName}
        </if>
        <if test="@org.apache.commons.lang3.StringUtils@isNotBlank(email)">
            and email = #{email}
        </if>
        <if test="@org.apache.commons.lang3.StringUtils@isNotBlank(password)">
            and password = #{password}
        </if>
    </select>
    <select id="findLoginUser" resultMap="user-result" parameterType="user">
        select *
          from users 
         where password = #{password} 
           and (user_name = #{userName}
            or email = #{userName})
         limit 1
    </select>

    <update id="updateUser" parameterType="user">
        update users 
           set user_name  =  #{userName},
               email      =  #{email},
               address    =  #{address},
               mobile     =  #{mobile},
               telephone  =  #{telephone},
               sns        =  #{sns}
         where id         =  #{id}
    </update>
    <insert id="saveUser" parameterType="user">
        insert into users (
               user_name,
               password,
               email,
               address,
               mobile,
               telephone,
               sns)
       values( #{userName},
               #{password},
               #{email},
               #{address},
               #{mobile},
               #{telephone},
               #{sns})
    </insert>
</mapper>